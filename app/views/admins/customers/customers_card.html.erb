<div class="d-flex flex-wrap justify-left-around">
  <% customers.each do |customers| %>
    <%= link_to admin_customers_path(customers) do %>
      <div class="card mt-3 mb-3 ml-2">
        <div class="card", style="width: 15rem; color:#727068; background-color:#ffffff">
          <!--プロフィール画像-->
          <%= image_tag customers.get_profile_image(200,200), class: "card-img-top", alt: "Card image cap",
              style: "height: 150px; width: auto; object-fit: cover" %>
          <div class="card-body", style="color:#4b4841; background-color:#ffffff">
            <!--ユーザー名-->
            <h5 class="card-title"><%= customers.name %></h5>
            <!--ステータス-->
            <p class="card-text">
              ステータス
              <% if customers.is_deleted %>
                退会 <i class="fas fa-comment-slash"></i>
              <% else %>
                有効 <i class="fas fa-comment-dots"></i>
              <% end %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
