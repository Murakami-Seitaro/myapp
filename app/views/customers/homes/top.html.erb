<div class="container">
  <div class="row">
    <div class="col-12 text-center">
      <!--ロゴマーク-->
      <%= image_tag "logo-m.png", size: "700x600", class: "img" %>
      <!--説明文-->
      <div class="mb-3">
        <h2 class="font-weight-bold">あなた</h2>
        <p class="mt-3 mb-5">
          日々<br>
          自分<br>
          記録
        </p>
        <div class="mb-5">
          <!--ログイン中の選択ボタン-->
          <% if customer_signed_in? %>
            <%= link_to new_document_path, class: 'btn btn-info rounded-pill mx-3 my-1' do %>
              <div class="flex-colum mx-3 text_center">
                <i class="fas fa-pen-nib"></i> 記録を書く
              </div>
            <% end %>
          <!--ログイン前の選択ボタン-->
          <% else %>
            <%= link_to new_customer_registration_path, class: 'btn btn-success rounded-pill mx-3 my-1' do %>
              <div class="flex-colum mx-3 text_center">
                <i class="fas fa-user-plus"></i> 新規登録
              </div>
            <% end %>
            <%= link_to customers_guest_sign_in_path, method: :post, class: 'btn btn-primary rounded-pill mx-3 my-1' do %>
              <div class="flex-colum mx-3 text_center">
                <i class="fas fa-user-check"></i> ゲストログイン
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
